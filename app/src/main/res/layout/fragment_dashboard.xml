<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"

    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:background="@color/purple_200"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tbl_hd_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textAppearance="@style/txtTextHD" />

                <TextView
                    android:id="@+id/tbl_hd_moisture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Moisture"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textAppearance="@style/txtTextHD" />

                <TextView
                    android:id="@+id/tbl_hd_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Humidity"
                    android:textAppearance="@style/txtTextHD" />
                <TextView
                    android:id="@+id/tbl_hd_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Temperature"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textAppearance="@style/txtTextHD" />

                <TextView
                    android:id="@+id/tbl_hd_solenoid_valve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Solenoid Valve"
                    android:textAppearance="@style/txtTextHD" />


            </TableRow>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_microcontroller_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clickable="true"
                android:focusable="true" />

        </TableLayout>


    </LinearLayout>

